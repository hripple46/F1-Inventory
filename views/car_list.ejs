<!DOCTYPE html>
<html class="h-full w-full">
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body class="w-full h-full">
    <div class="flex w-full h-full">
      <%- include ('sidebar') %>
      <div class="w-3/4 pt-8 pl-4">
        <h1 class="text-3xl text-red-600 h-24">Formula 1</h1>
        <p class="text-2xl">Cars:</p>
        <div class="grid grid-cols-3 gap-4 mt-8">
          <% for (let car of car_list) { %>
          <a href="<%= car.url %>">
            <div
              class="flex items-center min-h-[90px] h-full w-full bg-red-600 text-white"
            >
              <p class="text-2xl"><%= car.name %></p>
            </div>
          </a>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
