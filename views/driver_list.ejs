<!DOCTYPE html>
<html class="h-full w-full">
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body class="w-full h-full">
    <div class="flex w-full h-full">
      <%- include ('sidebar') %>
      <div class="w-3/4 pt-8 pl-4">
        <h1 class="text-3xl text-red-600">Drivers</h1>

        <div class="grid grid-cols-3 gap-4 mt-8">
          <% for (let driver of driver_list) { %>
          <a href="<%= driver.url %>">
            <div class="bg-gray-50 shadow-lg p-4">
              <p class="text-2xl"><%= driver.name %></p>
              <p class="text-2xl"></p>
            </div>
          </a>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
